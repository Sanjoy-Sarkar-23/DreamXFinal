<style>
    /* Add custom styles here */
    #flash-messages-container {
        position: fixed;
        top: 100px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        width: 300px;
        background-color: #4CAF50;
        color: #fff;
        padding: 15px;
        border-radius: 5px;
        text-align: center;
        /* display: none; */
    }

    #flash-messages-container-error {
        position: fixed;
        top: 100px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        width: 300px;
        background-color: #ff0015;
        color: #fff;
        padding: 15px;
        border-radius: 5px;
        text-align: center;
        /* display: none; */
    }

    #close-flash-message {
        cursor: pointer;
        position: absolute;
        top: 5px;
        right: 10px;
        color: #fff;
    }
</style>

<% if(error && error.length){%>
    <div id="flash-messages-container-error">
        <span id="close-flash-message" onclick="closeFlashMessage()">x</span>
        <%= error %>
    </div>
    <%}%>


        <% if(success && success.length){%>
            <div id="flash-messages-container">
                <span id="close-flash-message" onclick="closeFlashMessage()">x</span>
                <%= success %>
            </div>
            <%}%>
