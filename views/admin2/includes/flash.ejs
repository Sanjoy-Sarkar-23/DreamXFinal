                <!-- Custom JavaScript -->
                <script>
                    // Function to show flash messages
                    setTimeout(() => {
                        closeFlashMessage();
                    }, 5000);
                    // Function to close the flash message
                    function closeFlashMessage() {
                        const flashMessagesContainer = document.getElementById('flash-messages-container');
                        flashMessagesContainer.style.display = 'none';
                    }

                    setTimeout(() => {
                        closeFlashMessages();
                    }, 5000);
                    // Function to close the flash message
                    function closeFlashMessages() {
                        const flashMessagesContainer = document.getElementById('flash-messages-container-error');
                        flashMessagesContainer.style.display = 'none';
                    }

