<style>
    /* Add custom styles here */
    #flash-messages-container {
        position: fixed;
        top: 100px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        width: 300px;
        background-color: #4CAF50;
        color: #fff;
        padding: 15px;
        border-radius: 5px;
        text-align: center;
        display: none;
    }

    #close-flash-message {
        cursor: pointer;
        position: absolute;
        top: 5px;
        right: 10px;
        color: #fff;
    }
</style>



<!-- Flash Messages Container -->
<div id="flash-messages-container">
    <span id="close-flash-message" onclick="closeFlashMessage()">x</span>
    A simple success messageâ€”check it out!
</div>

<!-- Custom JavaScript -->
<script>
    // Function to show flash messages
    function showFlashMessage(message, type) {
        const flashMessagesContainer = document.getElementById('flash-messages-container');

        // Set the message content and type
        flashMessagesContainer.innerHTML = `<span id="close-flash-message" onclick="closeFlashMessage()">x</span>${message}`;
        flashMessagesContainer.style.backgroundColor = type === 'success' ? '#4CAF50' : '#e74c3c';

        // Display the flash message
        flashMessagesContainer.style.display = 'block';

        // Automatically remove the flash message after a certain time (e.g., 5 seconds)
        setTimeout(() => {
            closeFlashMessage();
        }, 5000);
    }

    // Function to close the flash message
    function closeFlashMessage() {
        const flashMessagesContainer = document.getElementById('flash-messages-container');
        flashMessagesContainer.style.display = 'none';
    }

    // Example: Show a success flash message
    showFlashMessage('Operation successful!', 'success');

    // Example: Show an error flash message
    // showFlashMessage('Error occurred!', 'error');
</script>