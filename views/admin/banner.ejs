                        <div class="card">
                            <div class="card-body">



                                <div class="table-responsive">
                                    <table class="table table-editable table-nowrap align-middle table-edits">
                                        <thead>
                                            <tr>
                                                <th>Slider Image</th>
                                                <th>Slider Name</th>
                                                <th>Order</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr data-id="1">
                                                <td><img class="img-thumbnail" alt="200x200" width="200"
                                                        src="assets/images/small/img-1.jpg" data-holder-rendered="true">
                                                </td>
                                                <td data-field="name">Slider 1</td>
                                                <td data-field="name">1</td>
                                                <td>
                                                    <a type="button" class="btn btn-danger btn-sm"><i
                                                            class="fas fa-trash"></i></i></a>
                                                </td>
                                            </tr>
                                            <tr data-id="2">
                                                <td><img class="img-thumbnail" alt="200x200" width="200"
                                                        src="assets/images/small/img-2.jpg" data-holder-rendered="true">
                                                </td>
                                                <td data-field="name">Slider 2</td>
                                                <td data-field="name">2</td>
                                                <td>
                                                    <a type="button" class="btn btn-danger btn-sm"><i
                                                            class="fas fa-trash"></i></i></a>
                                                </td>
                                            </tr>
                                            <tr data-id="3">

                                                <td><img class="img-thumbnail" alt="200x200" width="200"
                                                        src="assets/images/small/img-3.jpg" data-holder-rendered="true">
                                                </td>
                                                <td data-field="name">Slider 3</td>
                                                <td data-field="name">3</td>
                                                <td>
                                                    <a type="button" class="btn btn-danger btn-sm"><i
                                                            class="fas fa-trash"></i></i></a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->


                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <br>
                                <h5>Add New Banner</h5>
                                <br>
                                <form>
                                    <div class="row">
                                        <div class="col-12">

                                            <div class="mb-3">
                                                <label for="validationCustom01" class="form-label">Order</label>
                                                <input type="number" class="form-control" id="validationCustom02"
                                                    placeholder="Enter slider number" value="" required>
                                                <div class="valid-feedback">
                                                    Looks good!
                                                </div>

                                            </div>
                                            <div class="mb-3">
                                                <label for="validationCustom01" class="form-label">Slider
                                                    Name</label>
                                                <input type="text" class="form-control" id="validationCustom02"
                                                    placeholder="Enter name" value="" required>
                                                <div class="valid-feedback">
                                                    Looks good!
                                                </div>

                                            </div>
                                            <div class="mb-3">
                                                <label for="validationCustom02" class="form-label">Upload
                                                    Slider</label>

                                                <input type="file" class="form-control" id="customFile">
                                            </div>
                                        </div>
                                    </div>

                                    <br>

                                    <div>

                                        <input class="btn btn-success" type="submit" value="Add slider">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div> <!-- end row -->
            </div> <!-- container-fluid -->
        </div>
